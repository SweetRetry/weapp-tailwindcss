{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "test"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "#test/*": [
        "test/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "webpack",
      "node",
      "vitest/globals"
    ],
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "test/**/*",
    "e2e/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test/types",
    "./*.d.ts",
    "demo/**/*",
    "test/fixtures/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
