rd-tag{
  --color-danger: #ff2332;
  --color-success: #19b435;
  --color-warning: #ff8812;
  --color-primary: #0188ff;
  --color-grey: #f5f5f5;
  --rgba-danger: rgba(255, 35, 50,0.1);
  --rgba-success: rgba(25, 180, 53,0.1);
  --rgba-warning: rgba(255, 136, 18,0.1);
  --rgba-primary: rgb(1, 136, 255,0.1);
  --rgba-grey: rgba(245, 245, 245,1);
}

.rd-tag-box{
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border: 1px;
  border-style: solid;
  box-sizing: border-box;
  background: #fff;
  border-color: #dcdcdc;
  max-width: 124px;

}
.rd-tag-text{
  text-align: center;
  font-size: 12px;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  white-space: normal;
  overflow: hidden;
  -webkit-line-clamp: 1;
}
.rd-tag-icon-close{
 height: 100%;
 display: flex;
 flex-direction: row;
 align-items: center;
 justify-content: center;
}
/* 角度 圆角样式 square[方]， round[圆], halfRound[半圆], single[单直角]*/
.rd-tag-radius-square{
  border-radius: 4px;
}
.rd-tag-radius-round{
  border-radius: 12px;
}
.rd-tag-radius-halfRound{
  border-radius: 0 12px 12px 0
}
.rd-tag-radius-single{
  border-radius: 12px 12px 12px 0
}
.rd-tag-icon{
 margin-right: 4px;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: center;
}
/* tag 类型  dark/light/outline/light-outline */
/* danger */
/* 深色模式 边框透明 字体白色*/
.rd-tag-dark-danger{
  border-color: transparent;
  background: var(--color-danger);
  color: #fff;
}
/*  边框透明 背景浅色 字体高亮*/
.rd-tag-light-danger{
  border-color: transparent;
  background: var(--rgba-danger);
  color: var(--color-danger);
}
/* 背景透明，边框高亮 字体高亮*/
.rd-tag-outline-danger{
  background:#fff;
  border-color: var(--color-danger);
  color: var(--color-danger);
}
/* 背景浅色，边框高亮 字体高亮*/
.rd-tag-light-outline-danger{
   background: var(--rgba-danger);
   color: var(--color-danger);
