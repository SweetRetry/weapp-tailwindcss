<view class="h-full text-center">
  <view class="m-[20px]">
    <view>
      <image src="https://res.jianhui.org/weapp-workflow/weapp-worfkflow@2x.jpg" mode="widthFix" class="w-full h-auto"></image>
    </view>
    <view>
      <view class="text-[26px] mt-[20px] font-medium">WeApp-Workflow</view>
      <view class="text-[14px] mt-[20px]">基于Gulp 的微信小程序前端开发工作流</view>
      <view class="text-[14px] mt-[20px] text-[#5ba4e5]" bindtap="copyText" data-text="https:\/\/github.com/Jeff2Ma/WeApp-Workflow">
